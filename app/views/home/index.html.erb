<div class="container">
<div class="row">
<% @albums.each do |album| %>
  <% if album.publish? %>
  <div class="col-md-3 col-sm-12">
  <div class="card mt-2">
  <div class="card-header text-center">
  <%= album.title %>
  </div>
  <div class="card-body">
  <% if album.cover_image.attached? %>
  <%= image_tag(album.cover_image, class: "card-top-img img-fluid") %>
  <% end %>
  <p class="mt-2"><strong>Published by: </strong><%=album.user.email.split('@')[0] %></p>
  <p class="mt-2"><strong>Published On: </strong><span class="text-muted"><%= album.created_at.to_s.split(' ')[0] %></span></p>
  <p><strong>Last Updated: </strong><span class="text-muted"><%= album.updated_at.to_s.split(' ')[0] %></span></p>
  </div>
  <div class="mx-2 text-truncate">
  <p class="text-muted "><strong>Tags: </strong><%=  album.all_tags%> </p>
  </div>
  <div class="card-footer text-center">
  <%= link_to "Show", home_path(album.id), class: "btn btn-warning" %>
  </div>
  </div>
  </div>
  <% end %>
  <% end %>
  </div>
